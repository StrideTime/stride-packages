{
  "name": "@stridetime/core",
  "version": "1.0.0",
  "description": "Business logic for Stride - task management, scoring, and productivity calculations",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "private": false,
  "scripts": {
    "build": "vite build",
    "clean": "rm -rf dist",
    "dev": "vite build --watch",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run src/tests/services/",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "yarn build && changeset publish"
  },
  "dependencies": {
    "@stridetime/db": "workspace:*",
    "@stridetime/types": "workspace:*"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@stridetime/test-utils": "workspace:*",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "stride",
    "productivity",
    "task-management",
    "business-logic",
    "scoring"
  ],
  "author": "Stride Team",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/stridetime/stride-core.git"
  },
  "bugs": {
    "url": "https://github.com/stridetime/stride-core/issues"
  },
  "homepage": "https://github.com/stridetime/stride-core#readme"
}
