{
  "name": "@stridetime/db",
  "version": "1.0.0",
  "description": "Database layer for Stride - Drizzle ORM with local-first SQLite and PowerSync cloud sync",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run src/tests/repositories/",
    "test:integration": "vitest run src/tests/integration/",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "yarn build && changeset publish"
  },
  "dependencies": {
    "@journeyapps/wa-sqlite": "^1.4.1",
    "@powersync/common": "^1.46.0",
    "@powersync/drizzle-driver": "^0.7.2",
    "@powersync/web": "^1.32.0",
    "@stridetime/types": "workspace:*",
    "@supabase/supabase-js": "^2.39.0",
    "drizzle-orm": "^0.38.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^25.1.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "better-sqlite3": "^11.0.0",
    "drizzle-kit": "^0.30.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "tsup": "^8.0.0",
    "typescript": "^5.8.3",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "stride",
    "database",
    "sqlite",
    "drizzle",
    "orm",
    "local-first",
    "powersync",
    "sync"
  ],
  "author": "Stride Team",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/stridetime/stride-db.git"
  },
  "bugs": {
    "url": "https://github.com/stridetime/stride-db/issues"
  },
  "homepage": "https://github.com/stridetime/stride-db#readme"
}
